<div class="reg-img"></div>
<h2 id="reg-head">SIGN UP</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="register pull-right user_reg">

  <div class="form-horizontal" role="form">

  <div class="form-group">
  <div class="col-md-4">
  <%= f.label :full_name %><br />
  </div>
  <div class="col-md-8">  
  <%= f.text_field :full_name, :placeholder => "Please enter your Full Name" %>
  </div>
  </div>
  <div class="form-group">
  <div class="col-md-4">
  <%= f.label :email %><br />
  </div>
  <div class="col-md-8">
  <%= f.email_field :email, :placeholder => "Please enter your Email" %>
  </div>
  </div>
  <div class="form-group">
  <div class="col-md-4">
  <%= f.label :password %><br />
  </div>
  <div class="col-md-8">
  <%= f.password_field :password, autocomplete: "off", :placeholder => "Password (min 8 characters)" %>
  </div>
  </div>
  <div class="form-group">
  <div class="col-md-4">
  <%= f.label :password_confirmation %><br />
  </div>
  <div class="col-md-8">
  <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  </div>
  <div class="form-group">
  <div class="col-md-4">
  <%= f.label :address %><br />
  </div>
  <div class="col-md-8">
  <%= f.text_field :address %>
  </div>
  </div>
  <div class="form-group">
  <div class="col-md-4">
  <%= f.label :city %><br />
  </div>
  <div class="col-md-8">
  <%= f.text_field :city %>
  </div>
  </div>
  <div class="form-group">
  <div class="col-md-4">
  <%= f.label :state %><br />
  </div>
  <div class="col-md-8">
  <%= f.text_field :state %>
  </div>
  </div>
  <div class="form-group">
  <div class="col-md-4">
  <%= f.label :country %><br />
  </div>
  <div class="col-md-8">
  <%= f.text_field :country %>
  </div>
  </div>
  <div class="form-group">
  <div class="col-md-4">
  <%= f.label :mobile %><br />
  </div>
  <div class="col-md-8">
  <%= f.text_field :mobile %>
  </div>
  </div>
  <div class="form-group">
  <div class="col-sm-offset-4 col-sm-8">	
  <%= f.submit "Sign up", :class => "btn btn-success" %>
  </div>
  </div>
<% end %>
<%= link_to "Back to HomePage", root_path %>
 

</div>
</div>

